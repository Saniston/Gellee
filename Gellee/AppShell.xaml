<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Gellee.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Gellee"
    Title="Gellee">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!-- Rotas das pÃ¡ginas do menu -->
    <ShellContent Title="Unidades" ContentTemplate="{DataTemplate local:Pages.Units.UnitsPage}" Route="UnitsPage" />
    <ShellContent Title="Ingredientes" ContentTemplate="{DataTemplate local:Pages.Ingredients.IngredientsPage}" Route="IngredientsPage" />
    <ShellContent Title="Receitas" ContentTemplate="{DataTemplate local:Pages.Recipes.RecipesPage}" Route="RecipesPage" />

</Shell>