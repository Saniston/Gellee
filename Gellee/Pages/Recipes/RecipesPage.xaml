<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gellee.Pages.Recipes.RecipesPage"
             Title="Receitas">
    <VerticalStackLayout Padding="16" Spacing="12">

        <SearchBar
            x:Name="SearchBar"
            Placeholder="Pesquisar receitas..."
            TextChanged="OnSearchBarTextChanged" />

        <CollectionView
            x:Name="RecipesCollection"
            ItemsLayout="VerticalList"
            RemainingItemsThreshold="2"
            RemainingItemsThresholdReached="OnRemainingItemsThresholdReached"
            VerticalOptions="FillAndExpand"
            SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems Mode="Reveal">
                                <SwipeItem
                                    Text="Editar"
                                    BackgroundColor="{StaticResource AccentOrange}"
                                    CommandParameter="{Binding Id}"
                                    Invoked="OnEditSwipeInvoked" />
                                <SwipeItem
                                    Text="Remover"
                                    BackgroundColor="{StaticResource Gray300}"
                                    CommandParameter="{Binding Id}"
                                    Invoked="OnDeleteSwipeInvoked" />
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <Grid Padding="12">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" />
                                <Label Text="{Binding Description}" FontSize="12" LineBreakMode="TailTruncation" TextColor="{StaticResource Gray600}" />
                            </VerticalStackLayout>
                        </Grid>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <HorizontalStackLayout HorizontalOptions="Fill" Padding="0,8,0,0">
            <Button
                x:Name="AddRecipeButton"
                Text="Adicionar receita"
                Clicked="OnAddRecipeClicked"
                HorizontalOptions="Center"
                BackgroundColor="{StaticResource AccentOrangeBrush}"
                TextColor="{StaticResource White}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>