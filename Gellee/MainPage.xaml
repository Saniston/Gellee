<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gellee.MainPage">

    <Grid RowDefinitions="Auto,*" Padding="20">
        <!-- Navigation Menu -->
        <HorizontalStackLayout Spacing="12" VerticalOptions="Start" HorizontalOptions="Center" Padding="0,10">
            <Button
                x:Name="UnitsBtn"
                Text="Unidades de Medida"
                Clicked="OnUnitsClicked"
                BackgroundColor="{StaticResource Gray300}"
                BorderColor="{StaticResource AccentOrange}"
                BorderWidth="1"
                TextColor="{StaticResource Gray900}"
                CornerRadius="12"
                Padding="14,8" />

            <Button
                x:Name="IngredientsBtn"
                Text="Ingredientes"
                Clicked="OnIngredientsClicked"
                BackgroundColor="{StaticResource Gray300}"
                BorderColor="{StaticResource AccentOrange}"
                BorderWidth="1"
                TextColor="{StaticResource Gray900}"
                CornerRadius="12"
                Padding="14,8" />

            <!-- Receitas destacado -->
            <Button
                x:Name="RecipesBtn"
                Text="Receitas"
                Clicked="OnRecipesClicked"
                BackgroundColor="{StaticResource Success}"
                BorderColor="{StaticResource Success}"
                BorderWidth="2"
                TextColor="{StaticResource White}"
                FontAttributes="Bold"
                CornerRadius="16"
                Padding="16,10" />
        </HorizontalStackLayout>

    </Grid>

</ContentPage>