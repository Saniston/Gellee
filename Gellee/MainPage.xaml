<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gellee.MainPage">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <!-- Background image (colocada primeiro para ficar atrás) -->
        <Image Source="gelleebg.jpeg"
               Aspect="AspectFill"
               Opacity="0.75"
               Grid.RowSpan="3" />

        <!-- App name (topo) -->
        <Label
            Grid.Row="0"
            Text="Gellée"
            FontSize="32"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            TextColor="#F4C2E0"
            Margin="0,4" />

        <!-- Espaço central (pode receber conteúdo futuro) -->
        <VerticalStackLayout Grid.Row="1" />

        <!-- Navigation Menu (fixo próximo à borda inferior) -->
        <VerticalStackLayout Grid.Row="2" Spacing="12" HorizontalOptions="Center" VerticalOptions="End" Padding="0,8">
            <Button
                x:Name="UnitsBtn"
                Text="Unidades de Medida"
                Clicked="OnUnitsClicked"
                BackgroundColor="#D7EEFF"
                BorderColor="#9FC9FF"
                BorderWidth="1"
                TextColor="{StaticResource Gray900}"
                CornerRadius="12"
                Padding="14,8"
                HorizontalOptions="Center"
                FontSize="16" />

            <Button
                x:Name="IngredientsBtn"
                Text="Ingredientes"
                Clicked="OnIngredientsClicked"
                BackgroundColor="#D7EEFF"
                BorderColor="#9FC9FF"
                BorderWidth="1"
                TextColor="{StaticResource Gray900}"
                CornerRadius="12"
                Padding="14,8"
                HorizontalOptions="Center"
                FontSize="16" />

            <!-- Receitas destacado -->
            <Button
                x:Name="RecipesBtn"
                Text="Receitas"
                Clicked="OnRecipesClicked"
                BackgroundColor="#E6F9E8"
                BorderColor="#BFEFC2"
                BorderWidth="2"
                TextColor="{StaticResource Gray900}"
                FontAttributes="Bold"
                CornerRadius="16"
                Padding="16,10"
                HorizontalOptions="Center"
                FontSize="16" />
        </VerticalStackLayout>

    </Grid>

</ContentPage>